<UserControl x:Class="PointOfSale.BottomControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Name="addButton" Grid.Column="0" FontSize="20" FontFamily="Arial">
            Add
        </Button>
        <Button Name="editButton" Grid.Column="1" FontSize="20" FontFamily="Arial">
            Edit
        </Button>
        <Button Name="removeButton" Grid.Column="2" FontSize="20" FontFamily="Arial">
            Remove
        </Button>
        <Button Name="totalButton" Grid.Column="3" FontSize="20" FontFamily="Arial">
            Total
        </Button>
    </Grid>
</UserControl>
