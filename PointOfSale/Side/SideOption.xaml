<UserControl x:Class="PointOfSale.Side.SideOption"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.Side"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Click="SelectWaffleFries" Grid.Row="0" FontSize="15" FontFamily="Arial">
            DB Wafl Fries
        </Button>
        <Button Click="SelectFriedMiraak" Grid.Row="1" FontSize="15" FontFamily="Arial">
            Fried Miraak
        </Button>
        <Button Click="SelectMadOtarGrits" Grid.Row="2" FontSize="15" FontFamily="Arial">
            Mad O Grits
        </Button>
        <Button Click="SelectVokunSalad" Grid.Row="3" FontSize="15" FontFamily="Arial">
            Vokun Salad
        </Button>
    </Grid>
</UserControl>
