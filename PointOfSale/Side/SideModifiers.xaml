<UserControl x:Class="PointOfSale.Side.SideModifiers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.Side"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Name="smallButton" Grid.Column="0" Grid.Row="0" FontSize="25" FontFamily="Arial">
            Small
        </Button>
        <Button Name="mediumButton" Grid.Column="0" Grid.Row="1" FontSize="25" FontFamily="Arial">
            Medium
        </Button>
        <Button Name="largeButton" Grid.Column="0" Grid.Row="2" FontSize="25" FontFamily="Arial">
            Large
        </Button>
    </Grid>
</UserControl>
