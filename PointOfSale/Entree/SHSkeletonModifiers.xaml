<UserControl x:Class="PointOfSale.Entree.SHSkeletonModifiers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.Entree"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ToggleButton Name="sausageToggleButton" Grid.Column="0" Grid.Row="0" FontSize="20" FontFamily="Arial">
            Sausage Link
        </ToggleButton>
        <ToggleButton Name="eggToggleButton" Grid.Column="1" Grid.Row="0" FontSize="20" FontFamily="Arial">
            Egg
        </ToggleButton>

        <ToggleButton Name="hashBrownsToggleButton" Grid.Column="0" Grid.Row="1" FontSize="20" FontFamily="Arial">
            Hash Browns
        </ToggleButton>
        <ToggleButton Name="pancakeToggleButton" Grid.Column="1" Grid.Row="1" FontSize="20" FontFamily="Arial">
            Pancake
        </ToggleButton>
    </Grid>
</UserControl>
