<UserControl x:Class="PointOfSale.Entree.CheeseSteakModifiers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.Entree"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ToggleButton Name="onionToggleButton" IsChecked="{Binding Onion}" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" FontSize="20" FontFamily="Arial">
            Onion
        </ToggleButton>

        <ToggleButton Name="sirloinToggleButton" IsChecked="{Binding Sirloin}" Grid.Column="0" Grid.Row="1" FontSize="20" FontFamily="Arial">
            Sirloin
        </ToggleButton>
        <ToggleButton Name="rollToggleButton" IsChecked="{Binding Roll}" Grid.Column="1" Grid.Row="1" FontSize="20" FontFamily="Arial">
            Roll
        </ToggleButton>
    </Grid>
</UserControl>