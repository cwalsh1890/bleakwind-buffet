<UserControl x:Class="PointOfSale.Drink.DrinkOption"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.Drink"
             mc:Ignorable="d" 
             d:DesignHeight="450" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Click="AppleJuiceClick" Grid.Row="0" FontSize="15" FontFamily="Arial">
            Arentino AJ
        </Button>
        <Button Click="SelectCoffeeClick" Grid.Row="1" FontSize="15" FontFamily="Arial">
            CH Coffee
        </Button>
        <Button Click="MilkClick" Grid.Row="2" FontSize="15" FontFamily="Arial">
            Markarth Milk
        </Button>
        <Button Click="SodaClick" Grid.Row="3" FontSize="15" FontFamily="Arial">
            Sailor Soda
        </Button>
        <Button Click="WaterClick" Grid.Row="4" FontSize="15" FontFamily="Arial">
            Warrior Water
        </Button>
    </Grid>
</UserControl>
