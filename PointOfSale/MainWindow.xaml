<Window x:Class="PointOfSale.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PointOfSale"
        xmlns:drink="clr-namespace:PointOfSale.Drink"
        xmlns:entree="clr-namespace:PointOfSale.Entree"
        xmlns:side="clr-namespace:PointOfSale.Side"
        mc:Ignorable="d"
        Title="Bleakwind Buffet" Height="450" Width="750">
    <DockPanel>
        <local:BottomControls DockPanel.Dock="Bottom" Height="50" Margin="5"/>
        <local:TypeSelector DockPanel.Dock="Left" Width="100" Margin="5"/>
        <ContentControl Width="100" Margin="5">
            <drink:DrinkOption/>
        </ContentControl>
        <ContentControl Width="300" Margin="5">
            <drink:DrinkModifiers/>
        </ContentControl>
        <local:RuningTotal Margin="5">
            
        </local:RuningTotal>
        
    </DockPanel>
</Window>
